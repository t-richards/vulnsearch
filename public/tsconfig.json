{
  "compilerOptions": {
    // Core config options
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["dom", "es2018"],

    // Other flags
    "alwaysStrict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true
  }
}
