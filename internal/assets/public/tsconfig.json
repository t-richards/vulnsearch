{
  "compilerOptions": {
    // Core config options
    "target": "esnext",
    "module": "esnext",
    "rootDir": ".",
    "noEmit": true,
    "lib": ["dom", "es2018"],

    // Other flags
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true
  }
}
